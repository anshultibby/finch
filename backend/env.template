# =============================================================================
# LLM Configuration
# =============================================================================
# LiteLLM supports all providers - set model and corresponding API key

# Model to use (OpenAI, Anthropic, Google, etc.)
LLM_MODEL=claude-sonnet-4-5-20250929

# OpenAI API Key (required for gpt-* models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for claude-* models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (required for gemini-* models)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# External API Keys
# =============================================================================

# SnapTrade - Portfolio access via OAuth
# Get from: https://snaptrade.com/dashboard
SNAPTRADE_CLIENT_ID=your_client_id_here
SNAPTRADE_CONSUMER_KEY=your_consumer_key_here

# Financial Modeling Prep - Stock data, financials, market data
# Get from: https://site.financialmodelingprep.com/developer/docs
FMP_API_KEY=your_fmp_api_key_here

# Polygon.io - Historical prices, real-time quotes
# Get from: https://polygon.io/dashboard/signup
# Free tier: 5 API calls/minute
POLYGON_API_KEY=your_polygon_api_key_here

# Serper - Google Search API
# Get from: https://serper.dev
# Cost: ~$0.001 per search
SERPER_API_KEY=your_serper_api_key_here

# Dome API - Prediction markets data (Polymarket, Kalshi)
# Get from: https://domeapi.io
# Free tier: 1 request/second
DOME_API_KEY=your_dome_api_key_here

# =============================================================================
# Database (Supabase PostgreSQL)
# =============================================================================

# Direct connection (works on home network with IPv6)
# Get from: Supabase Dashboard > Project Settings > Database > Connection String
DATABASE_URL=postgresql://postgres:your_password@db.xxx.supabase.co:5432/postgres

# Connection Pooler (works on any network via IPv4)
# Get from: Supabase Dashboard > Project Settings > Database > Connection Pooling
DATABASE_URL_POOLER=postgresql://postgres:your_password@123.456.789.123:6543/postgres

# Use pooler instead of direct connection (recommended for non-home networks)
USE_POOLER=false

# =============================================================================
# Supabase Storage (for file uploads)
# =============================================================================
# Get from: Supabase Dashboard > Project Settings > API

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_STORAGE_BUCKET=chat-files

# =============================================================================
# API Server
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# Chat Configuration
# =============================================================================

# Max messages to send to LLM for context (system prompt always included)
CHAT_HISTORY_LIMIT=50

# =============================================================================
# Security
# =============================================================================

# Encryption key for sensitive data (optional)
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# =============================================================================
# Observability (Optional)
# =============================================================================

# LangFuse - LLM observability and tracing
# Get from: https://langfuse.com
# LANGFUSE_PUBLIC_KEY=your_public_key_here
# LANGFUSE_SECRET_KEY=your_secret_key_here
# LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# Debug Settings
# =============================================================================

# Save full conversation logs to chat_logs/
DEBUG_CHAT_LOGS=false

# Log performance timing (backend only, not sent to frontend)
ENABLE_TIMING_LOGS=true
